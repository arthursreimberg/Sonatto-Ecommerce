@model Sonatto.Models.Produto
@{
    ViewData["Title"] = "Adicionar produto";
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/AddProd.css" asp-append-version="true" />
    <link href="~/imgs/Logos/Monografia.png" rel="shortcut icon" />
</head>
<body>
    @Html.Partial("_Header")

    <div class="conteudo-page">
        <div class="navDasPag">
            <a asp-area="" asp-controller="Home" asp-action="Index">Perfil ></a>
            <a asp-area="" asp-controller="Home" asp-action="Index">Ações ></a>
            <a asp-area="" asp-controller="Produto" asp-action="Adicionar" style="color: black;">Adicionar</a>
        </div>

        <h1 class="titulo">Adicionar produto</h1>

        <div class="fundo">
            <form asp-action="Adicionar" asp-controller="Produto" method="post" enctype="multipart/form-data">
                <div class="campos">
                    <div class="cCaixas">
                        <h4>Nome</h4>
                        <input asp-for="NomeProduto" type="text" placeholder="Digite o nome do produto" required />
                    </div>
                    <div class="cCaixas">
                        <h4>Marca</h4>
                        <input asp-for="Marca" type="text" placeholder="Digite a marca do produto" required />
                    </div>
                    <div class="cCaixas">
                        <h4>Preço unitário</h4>
                        <input asp-for="Preco" type="number" step="0.01" placeholder="Digite o preço do produto" required />
                    </div>
                    <div class="cCaixas">
                        <h4>Avaliacao</h4>
                        <input asp-for="Avaliacao" type="number" step="0.01" placeholder="Digite a avaliação do produto" required />
                    </div>
                    <div class="cCaixas">
                        <h4>Categoria</h4>
                        <input asp-for="Categoria" type="text" placeholder="Digite a categoria do produto" required />
                    </div>
                    <div class="cCaixas">
                        <h4>Quantidade em estoque</h4>
                        <input type="number" name="qtdEstoque" placeholder="Digite a quantidade do produto" required />
                    </div>
                    <div class="cCaixas">
                        <h4>Descrição do produto</h4>
                        <textarea asp-for="Descricao" placeholder="Digite a descrição do produto"></textarea>
                    </div>

                    <div class="botoes">
                        <a asp-action="Index" asp-controller="Home" class="btnAddCan"><p>Cancelar</p></a>
                        <button type="submit" class="btnAddCan"><p>Adicionar</p></button>
                    </div>
                </div>

                <div class="campoImagens">
                    <h2>Arraste as imagens desejadas</h2>

                    <div class="arrastarImgs" id="dropZone">
                        <div class="arrastarImgsDentro">
                            <img src="~/imgs/Icones/img-icone.png" alt="Ícone imagem" />
                            <p>Arraste até 3 imagens</p>
                        </div>
                    </div>

                    <div class="imgsArrastadas" style="opacity:0; transition: opacity 0.5s ease;">
                        <div class="imgsArrastadasCampo" id="campo1" style="display:none; opacity:0; transition: opacity 0.5s ease;">
                            <div class="img-exemplo">
                                <img id="img1" src="" alt="Imagem 1" />
                            </div>
                            <h2>Imagem 1</h2>
                            <h3 class="aviso">Imagem de destaque. ATENÇÃO!</h3>
                            <input type="hidden" id="url1" name="imagens" />
                        </div>
                        <div class="imgsArrastadasCampo" id="campo2" style="display:none; opacity:0; transition: opacity 0.5s ease;">
                            <div class="img-exemplo">
                                <img id="img2" src="" alt="Imagem 2" />
                            </div>
                            <h2>Imagem 2</h2>
                            <input type="hidden" id="url2" name="imagens" />
                        </div>
                        <div class="imgsArrastadasCampo" id="campo3" style="display:none; opacity:0; transition: opacity 0.5s ease;">
                            <div class="img-exemplo">
                                <img id="img3" src="" alt="Imagem 3" />
                            </div>
                            <h2>Imagem 3</h2>
                            <input type="hidden" id="url3" name="imagens" />
                        </div>
                    </div>
                </div>
            </form>
        </div>

        @Html.Partial("_Footer")
    </div>

    <script>
        const dropZone = document.getElementById('dropZone');
        const imgs = [
            document.getElementById('img1'),
            document.getElementById('img2'),
            document.getElementById('img3')
        ];
        const urls = [
            document.getElementById('url1'),
            document.getElementById('url2'),
            document.getElementById('url3')
        ];
        const campos = [
            document.getElementById('campo1'),
            document.getElementById('campo2'),
            document.getElementById('campo3')
        ];
        let currentIndex = 0;

        dropZone.addEventListener('dragover', (event) => {
            event.preventDefault();
            dropZone.classList.add('dragover');
        });

        dropZone.addEventListener('dragleave', () => {
            dropZone.classList.remove('dragover');
        });

        dropZone.addEventListener('drop', (event) => {
            event.preventDefault();
            dropZone.classList.remove('dragover');

            const siteImg = event.dataTransfer.getData('text/uri-list');
            if (siteImg) {
                addImage(siteImg);
                return;
            }

            const files = event.dataTransfer.files;
            for (let i = 0; i < files.length; i++) {
                const file = files[i];
                if (file.type.startsWith('image/')) { // Verifica se o objeto arrastado é uma imagem
                    const url = URL.createObjectURL(file);
                    addImage(url);
                }
            }
        });

        function addImage(url) {
            if (currentIndex < 3) {
                const container = document.querySelector('.imgsArrastadas');
                const campo = campos[currentIndex];

                if (currentIndex === 0) {
                    container.style.opacity = '1';
                }

                imgs[currentIndex].src = url;
                urls[currentIndex].value = url;

                campo.style.display = 'flex';
                setTimeout(() => campo.style.opacity = '1', 50);

                currentIndex++;
            } else {
                alert("Você só pode adicionar até 3 imagens.");
            }
        }
    </script>
</body>
</html>
